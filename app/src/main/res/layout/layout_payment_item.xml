<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_good_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_shopping_basket"
        app:shapeAppearanceOverlay="@style/CircleImageStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="IPhone 13 Pro Max"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/iv_good_image"
        app:layout_constraintStart_toEndOf="@id/iv_good_image"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_good_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="当前的商品是IPhone 13 Pro Max"
        app:layout_constraintBottom_toBottomOf="@id/iv_good_image"
        app:layout_constraintStart_toEndOf="@id/iv_good_image"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_payment_status"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="待支付"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_good_image"
        app:layout_constraintBottom_toBottomOf="@id/iv_good_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>